{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "h",
        "hpp",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        },
        "client": {
          "diagnosticsRelatedInformation": false
        },
        "highlight": {
          "lsRanges": true
        }
      }
    },
    "cmake": {
      "command": "cmake-language-server",
      "filetypes": [
        "cmake"
      ],
      "rootPatterns": [
        "build/"
      ],
      "initializationOptions": {
        "buildDirectory": "build"
      }
    }
  },
  "python.jediEnabled": false,
  "diagnostic.warningSign": "--",
  "list.previewHighlightGroup": "Statement",
  "list.searchHighlightGroup": "Statement",
  "coc.preferences.hoverTarget": "preview",
  "diagnostic.messageTarget": "echo",
  "suggest.floatEnable": true,
  "signature.target": "float",
  "signature.preferShownAbove": false,
  "signature.enable": true,
  "latex.build.executable": "pdflatex",
  "latex.build.args": [
    "--shell-escape",
    "-pdf",
    "-interaction=nonstopmode",
    "-output-dir=build"
  ]
}
