{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "h",
        "hpp",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        },
        "highlight": {
          "lsRanges": true
        }
      }
    },
    "cmake": {
      "command": "cmake-language-server",
      "filetypes": [
        "cmake"
      ],
      "rootPatterns": [
        "build/"
      ],
      "initializationOptions": {
        "buildDirectory": "build"
      }
    }
  },
  "diagnostic.warningSign": "--",
  "list.previewHighlightGroup": "Statement",
  "list.searchHighlightGroup": "Statement",
  "coc.preferences.hoverTarget": "preview",
  "diagnostic.messageTarget": "echo",
  "suggest.floatEnable": false,
  "signature.target": "echo",
  "signature.enable": true,

  "latex.build.executable": "pdflatex",
  	"latex.build.args": [
		"--shell-escape",
		"-pdf",
		"-interaction=nonstopmode",
		"-output-dir=build"
	]
}
