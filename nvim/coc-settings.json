{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "h",
        "hpp",
        "objc",
        "objcpp",
        "arduino"
      ],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        },
        "client": {
          "snippetSupport": true
        },
        "highlight": {
          "lsRanges": true
        },
        "index": {
          "initialWhitelist": [".*"]
        }
      }
    }
  },
  "suggest.fixInsertedWord": true,
  "diagnostic.separateRelatedInformationAsDiagnostics": true,
  "clangd.enabled": false,
  "clangd.serverCompletionRanking": true,
  "clangd.semanticHighlighting": true,
  "clangd.arguments": [
    "--header-insertion=iwyu",
    "--suggest-missing-includes",
    "--completion-style=detailed",
    "--background-index=true",
    "-j=12"
  ],
  "python.jediEnabled": false,
  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Path": "/home/ziga/.local/bin/autopep8",
  "python.formatting.autopep8Args": [
    "--indent-size=2",
    "--ignore=E111,E226,E24,W50,W690"
  ],
  "python.linting.pep8Args": [
    "--indent-size=2",
    "--ignore=E111,E226,E24,W50,W690"
  ],
  "diagnostic.warningSign": "--",
  "list.previewHighlightGroup": "Statement",
  "coc.preferences.hoverTarget": "preview",
  "diagnostic.messageTarget": "echo",
  "suggest.floatEnable": true,
  "signature.target": "float",
  "signature.preferShownAbove": false,
  "signature.enable": true,
  "latex.build.executable": "pdflatex",
  "latex.build.args": [
    "--shell-escape",
    "-pdf",
    "-interaction=nonstopmode",
    "-output-dir=build"
  ]
}
